#!/bin/sh
while (true;)
do
    if fuser -s /dev/video*;
    then
        while fuser -s /dev/video*
        do
            curl -d text=" ON AIR" 'http://signpost.local/screen/' > /dev/null 2>&1
            sleep 5
        done
            curl -d text="" 'http://signpost.local/screen/' > /dev/null 2>&1
    else
        sleep 5
    fi
done
